{
    "compilerOptions": {
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["es6", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strict": true,
        "target": "es5",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
